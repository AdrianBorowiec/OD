<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Tytka Słodyczy</title>
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @Scripts.Render("~/bundles/jqueryUI")
        @Scripts.Render("~/bundles/jqueryval")
        @Scripts.Render("~/bundles/knockout")       
    </head>
    <body>
        <div id="wrapper">
            <!-- LOGO -->
            <div class="logo col-lg-12">
                @*<img src="~/Images/Shared/Logo.jpg" alt="logo" />*@
            </div>
            <!---->
            <!-- NAVBAR -->
            <nav class="navbar navbar-inverse bg-inverse navbar-fixed-top borderlist-li">
                <a class="navbar-brand" href="/Products/Index">Tytka Słodkości</a>
                @if (Session["CustomerId"] == null)
                {
                    @Html.ActionLink("Zarejestruj", "SignIn", "Customer", null, new { @class = "btn pull-right", @style = "font-weight: bold;" })
                    @Html.ActionLink("Zaloguj", "LogIn", "Customer", null, new { @class = "btn pull-right", @style = "font-weight: bold;" })
                }
                else
                {
                    @Html.ActionLink("Wyloguj", "LogOut", "Customer", null, new { @class = "btn pull-right", @style = "font-weight: bold;" })
                }
            </nav>
            <div class="col-lg-3" style="padding-left: 0px;">
                <ul class="nav navbar-inverse">
                    <li style="background-color: #428bca">
                        @Html.ActionLink("Koszyk", "Index", "Order", null, new { @style = "color: #333333;" })
                    </li>
                    <li>
                        @Html.ActionLink("Producenci", "Index", "Producers")
                    </li>
                    <li>
                        @Html.ActionLink("Produkty", "Index", "Products")
                    </li>
                </ul>
            </div>
            <!---->
            <!-- CONTENT PAGE -->
            <div id="page-content-wrapper" class="col-lg-9">
                <div class="container-fluid body-content">
                    @RenderBody()
                </div>
            </div>
            <!---->
        </div>
    </body>

    @RenderSection("Scripts", required: false)

</html>